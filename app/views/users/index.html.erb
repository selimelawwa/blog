<h1>All Bloggers</h1>
 
<div align= "center">
<%= will_paginate %>
<container>
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
          <li> <%= image_tag gravatar_url(user.email, 66),class: "img-circular", alt: "" %> </li>
          <li> <%= link_to user.username, user_path(user) %> </li>
          <li> <%= pluralize(user.articles.count,"article") if user.articles %> </li>
          <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete User", user_path(user), method: :delete, 
                    data: {confirm: "Are you sure you want to delete user and all its articles?"}%> </li>
          <%end%>
          </div>
        </div>
      </ul>  
</container>      
  </div> 
    <% end %>
 