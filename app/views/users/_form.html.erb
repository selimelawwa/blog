<%= render 'shared/errors', obj: @user%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :username %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, rows:8, class:"form-control", placeholder:"Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :encrypted_password %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :encrypted_password, rows:8, class:"form-control", placeholder:"Enter password" %>
        </div>
      </div>    


     <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if logged_in? %>
          <%= form.submit "Update", class:"btn btn-default" %>
          <%else%>
          <%= form.submit "Sign up", class:"btn btn-default" %>
          <%end%>
        </div>      
      </div> 
           
      <div  class="col-xs-offset-4 col-xs-4">
        <%= link_to 'Back to Home Page', root_path, class:"btn btn-primary" %>
      </div>
     

    <% end %>  
  </div>
</div>




