<%= render 'layouts/messages'%>
<div class="container">
  <h2 align="center"> <strong>Title:</strong> <%= @article.title %> </h2>
  <div class="row">
    <div class="well col-xs-8 col-xs-offset-2 ">
      <h4 class="center"> <strong>Description:</strong></h4>
      <p class="text-center">
      <%= @article.text %>
      </p>
         
        <div class="articles-actions">  
        <%if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-sm btn-primary" %> |
        <%= link_to 'Destroy', article_path(@article), method: :delete,
                              class:"btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %>|
                              <%end%>
        <%= link_to 'View all articles', articles_path, class:"btn btn-sm btn-success" %>
        </div>
    </div>
  </div>

  <div class="row">
    <h2>Comments</h2>
    <%= render @article.comments %>
    <br>
    <strong>Add a comment:</strong>
    <%= render 'comments/form' %>
  </div>

</div>

