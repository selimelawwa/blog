<%= render 'shared/errors', obj: @article%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :title %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :title, class:"form-control", placeholder:"Enter title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :text %>
        </div>
        <div class="col-sm-10">
          <%= form.text_area :text, rows:8, class:"form-control", placeholder:"Enter description" %>
        </div>
      </div>  

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class:"btn btn-default" %>
        </div>      
      </div> 
           
      <div  class="col-xs-offset-6 col-xs-4">
        [<%= link_to 'Back to Home Page', articles_path %>]
      </div>
     

    <% end %>  
  </div>
</div>

