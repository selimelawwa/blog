  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :title %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :title, class:"form-control", placeholder:"Enter title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :text %>
        </div>
        <div class="col-sm-10">
          <%= form.text_area :text, class:"form-control", placeholder:"Enter description" %>
        </div>
      </div>  

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class:"btn btn-default" %>
        </div>      
      </div>  
    <% end %>  
  </div>
</div>

